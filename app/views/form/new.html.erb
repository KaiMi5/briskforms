<% if flash[:notice] %>
<div class="alert alert-info"><%= flash[:notice] %></div>
<% end %>


<div class="page-header">
<h2>Create a new form handler</h2>
</div>



<% if flash[:error] %>
<div class="alert alert-danger"><%= flash[:error] %></div>
<% end %>

<%= form_tag('/new', class:'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag(:source_url, 'Source URL', class:'col-sm-3 control-label') %>
    <div class="col-sm-9">
    <%= text_field_tag(:source_url, nil, class:'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:email, 'Response Email', class:'col-sm-3 control-label') %>
    <div class="col-sm-9">
    <%= text_field_tag(:email, nil, class:'form-control') %>
    </div>
  </div>
  <div class="form-group">
   <%= label_tag(:success_url, 'Success Redirect', class:'col-sm-3 control-label') %>
    <div class="col-sm-9">
    <%= text_field_tag(:success_url, nil, class:'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:failure_url, 'Failure Redirect', class:'col-sm-3 control-label') %>
    <div class="col-sm-9">
    <%= text_field_tag(:failure_url, nil, class:'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <div class="checkbox">
        <label>
          <input type="checkbox">I agree to the terms and conditions as specified by.
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= submit_tag("Create", class:'btn btn-default') %>
    </div>
  </div>

<% end %>

<script>
$('#nav_new').addClass('active');
</script>