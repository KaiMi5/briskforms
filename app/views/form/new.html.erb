
<h2>Create new form handler</h2>


<% if flash[:notice] %>
<div class="alert notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
<div class="alert error"><%= flash[:error] %></div>
<% end %>

<%= form_tag do %>
  <%= label_tag(:source_url, "Source URL:") %>
  <%= text_field_tag(:source_url) %>
  <%= label_tag(:email, "Response Email:") %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:success_url, "Submit Success URL") %>
  <%= text_field_tag(:success_url) %>
  <%= label_tag(:failure_url, "Submit Failure URL") %>
  <%= text_field_tag(:failure_url) %>

  <!-- TODO: Agree to terms, send admin link to email checkboxes -->

  <%= submit_tag("Create") %>

<% end %>

<script>
$('#nav_new').addClass('active');
</script>